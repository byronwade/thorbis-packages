{
	"compilerOptions": {
		"target": "es2020",
		"module": "esnext",
		"lib": ["dom", "dom.iterable", "esnext"],
		"jsx": "react-jsx",
		"moduleResolution": "bundler",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"declarationDir": "./dist",
		"composite": false,
		"incremental": false
	},
	"include": ["src/**/*.ts", "src/**/*.tsx", "src/components/**/*.tsx", "src/components/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
